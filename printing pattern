#include <stdio.h>

int main() {
    int rows = 4; 
    int cols = 5;
    while (rows > 0) {
        int starCount = 0;
        for (int i = 0; i < rows; i++) {
            for (int j = 0; j < cols; j++) {
                printf("*");
                starCount++;
            }
            printf("\n");
        }
        printf("Stars in this block: %d\n", starCount);
        printf("\n");

        rows--; 
    }

    return 0;
}

